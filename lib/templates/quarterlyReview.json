{
  "id": "quarterly-review",
  "name": "Quarterly Investment Review",
  "category": "review",
  "description": "Comprehensive quarterly performance review for existing clients",
  "thumbnail": "/templates/quarterly-review.jpg",
  "slides": [
    {
      "id": "slide-1",
      "title": "Executive Summary",
      "category": "overview",
      "order": 1,
      "components": [
        {
          "type": "text",
          "position": { "x": 0, "y": 0, "w": 12, "h": 1 },
          "content": "{{executive_summary}}",
          "style": {
            "fontSize": 16,
            "lineHeight": 1.6
          }
        },
        {
          "type": "metric",
          "position": { "x": 0, "y": 2, "w": 6, "h": 1 },
          "label": "Portfolio Value",
          "value": "{{portfolio_value}}",
          "style": {
            "fontSize": 24,
            "fontWeight": "bold",
            "color": "#16a34a"
          }
        },
        {
          "type": "metric",
          "position": { "x": 6, "y": 2, "w": 6, "h": 1 },
          "label": "Quarter",
          "value": "{{quarter}}",
          "style": {
            "fontSize": 24,
            "fontWeight": "bold",
            "color": "#16a34a"
          }
        }
      ]
    },
    {
      "id": "slide-2",
      "title": "Portfolio Performance",
      "category": "performance",
      "order": 2,
      "components": [
        {
          "type": "chart",
          "position": { "x": 0, "y": 1, "w": 12, "h": 5 },
          "chartType": "line",
          "data": "{{performance_data}}",
          "config": {
            "showBenchmark": true
          }
        }
      ]
    },
    {
      "id": "slide-3",
      "title": "Current Allocation",
      "category": "allocation",
      "order": 3,
      "components": [
        {
          "type": "chart",
          "position": { "x": 1, "y": 1, "w": 5, "h": 5 },
          "chartType": "pie",
          "data": "{{allocation_data}}",
          "config": {
            "showLabels": true,
            "colors": ["#16a34a", "#22c55e", "#4ade80", "#86efac"]
          }
        },
        {
          "type": "table",
          "position": { "x": 7, "y": 1, "w": 5, "h": 5 },
          "data": "{{allocation_table}}",
          "config": {
            "headers": ["Asset", "Allocation", "Value"]
          }
        }
      ]
    },
    {
      "id": "slide-4",
      "title": "Risk Analysis",
      "category": "risk",
      "order": 4,
      "components": [
        {
          "type": "metric",
          "position": { "x": 0, "y": 1, "w": 3, "h": 2 },
          "label": "Sharpe Ratio",
          "value": "{{sharpe_ratio}}",
          "style": {
            "fontSize": 20,
            "fontWeight": "bold"
          }
        },
        {
          "type": "metric",
          "position": { "x": 3, "y": 1, "w": 3, "h": 2 },
          "label": "Volatility",
          "value": "{{volatility}}%",
          "style": {
            "fontSize": 20,
            "fontWeight": "bold"
          }
        },
        {
          "type": "metric",
          "position": { "x": 6, "y": 1, "w": 3, "h": 2 },
          "label": "Max Drawdown",
          "value": "{{max_drawdown}}%",
          "style": {
            "fontSize": 20,
            "fontWeight": "bold",
            "color": "#dc2626"
          }
        },
        {
          "type": "chart",
          "position": { "x": 9, "y": 1, "w": 3, "h": 2 },
          "chartType": "scatter",
          "data": "{{risk_matrix}}",
          "config": {
            "title": "Risk/Reward"
          }
        }
      ]
    },
    {
      "id": "slide-5",
      "title": "Recommendations",
      "category": "strategy",
      "order": 5,
      "components": [
        {
          "type": "text",
          "position": { "x": 0, "y": 0, "w": 12, "h": 6 },
          "content": "{{recommendations}}",
          "style": {
            "fontSize": 18,
            "lineHeight": 1.8
          }
        }
      ]
    },
    {
      "id": "slide-6",
      "title": "Market Commentary",
      "category": "commentary",
      "order": 6,
      "components": [
        {
          "type": "text",
          "position": { "x": 0, "y": 0, "w": 12, "h": 6 },
          "content": "{{market_commentary}}",
          "style": {
            "fontSize": 16,
            "lineHeight": 1.6
          }
        }
      ]
    }
  ],
  "variables": [
    "client_name",
    "portfolio_value",
    "quarter",
    "executive_summary",
    "performance_data",
    "allocation_data",
    "allocation_table",
    "recommendations",
    "market_commentary",
    "sharpe_ratio",
    "volatility",
    "max_drawdown",
    "risk_matrix"
  ]
}



